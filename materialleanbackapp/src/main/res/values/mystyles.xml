<resources>

    <style name="FullscreenTheme" parent="MaterialTheme.Light.DarkToolbar.TranslucentStatus"></style>


    <style name="AppTheme" parent="FullscreenTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Material.DrawerArrowStyle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>