<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <com.kofigyan.stateprogressbarsample.not_stateprogressbar.custom.ContentHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerSrc="@mipmap/ic_pricing"
            app:headerTitle="Price Offering"></com.kofigyan.stateprogressbarsample.not_stateprogressbar.custom.ContentHeaderView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_usage_rounded_corner"
            android:paddingBottom="8dp">


            <View
                android:id="@+id/vSeparator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#dfdfdf"
                android:paddingTop="2dp" />

            <RadioGroup
                android:id="@+id/rdGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vSeparator">

                <RadioButton
                    android:id="@+id/rbPerMonth"
                    style="@style/RadioButtonStyle"
                    android:checked="true"
                    android:text="Per month" />

                <RadioButton
                    android:id="@+id/rbPerWeek"
                    style="@style/RadioButtonStyle"
                    android:text="Per week" />


                <RadioButton
                    android:id="@+id/rbPerDay"
                    style="@style/RadioButtonStyle"
                    android:checked="false"
                    android:text="Per day" />


                <RadioButton
                    android:id="@+id/rbNegotiable"
                    style="@style/RadioButtonStyle"
                    android:text="Negotiable" />

            </RadioGroup>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>