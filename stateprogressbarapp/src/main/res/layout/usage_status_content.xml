<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <com.kofigyan.stateprogressbarsample.not_stateprogressbar.custom.ContentHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerSrc="@mipmap/ic_availability"
            app:headerTitle="Property Availability"></com.kofigyan.stateprogressbarsample.not_stateprogressbar.custom.ContentHeaderView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_usage_rounded_corner"
            android:paddingBottom="8dp">

            <View
                android:id="@+id/vSeparator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#dfdfdf"
                android:paddingTop="2dp" />

            <RadioGroup
                android:id="@+id/rdGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vSeparator">

                <RadioButton
                    android:id="@+id/rbNow"
                    style="@style/RadioButtonStyle"
                    android:checked="true"
                    android:text="Now" />

                <RadioButton
                    android:id="@+id/rbLater"
                    style="@style/RadioButtonStyle"
                    android:text="Later" />

            </RadioGroup>

        </RelativeLayout>


    </LinearLayout>


</ScrollView>
