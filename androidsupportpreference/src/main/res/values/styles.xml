<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Preference.Material" parent="">
        <item name="android:layout">@layout/asp_preference</item>
        <item name="asp_tint">?asp_preferenceIconTint</item>
        <item name="asp_iconPaddingEnabled">true</item>
    </style>

    <style name="Preference.Material.PreferenceScreen"/>

    <style name="Preference.Material.Information">
        <!--<item name="android:layout">@layout/preference_information_material</item>-->
        <item name="android:layout">@layout/asp_preference</item>
        <item name="android:enabled">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="Preference.Material.Category">
        <item name="android:layout">@layout/asp_preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Preference.Material.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/asp_preference_widget_checkbox</item>
    </style>

    <style name="Preference.Material.SwitchPreferenceCompat">
        <item name="android:widgetLayout">@layout/asp_preference_widget_switch</item>
        <item name="android:textOn">@string/capital_on</item>
        <item name="android:textOff">@string/capital_off</item>
        <!--<item name="android:textOn">@null</item>-->
        <!--<item name="android:textOff">@null</item>-->
    </style>

    <!--<style name="Preference.Material.SeekBarPreference">-->
    <!--<item name="android:layout">@layout/preference_widget_seekbar_material</item>-->
    <!--</style>-->

    <style name="Preference.Material.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>

        <item name="asp_dialogTint">?asp_preferenceDialogIconTint</item>
        <item name="asp_dialogIconPaddingEnabled">true</item>
    </style>

    <style name="Preference.Material.DialogPreference.YesNoPreference">
        <item name="android:positiveButtonText">@android:string/yes</item>
        <item name="android:negativeButtonText">@android:string/no</item>
    </style>

    <style name="Preference.Material.DialogPreference.EditTextPreference">
        <item name="android:dialogLayout">@layout/asp_preference_dialog_edittext</item>
    </style>

    <style name="Preference.Material.DialogPreference.SeekBarDialogPreference">
        <item name="android:dialogLayout">@layout/asp_seekbar_dialog</item>
    </style>

    <style name="Preference.Material.SeekBarPreference">
        <item name="android:layout">@layout/asp_preference_seekbar</item>
    </style>

    <style name="Preference.Material.DialogPreference.MultiSelectListPreference">
    </style>

    <style name="Preference.Material.DialogPreference.ListPreference">
        <item name="android:positiveButtonText">@null</item>
        <item name="android:negativeButtonText">@null</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Preference.Material.DialogPreference.ListPreference.SimpleMenu">
        <item name="asp_menuMode">simple_adaptive</item>
        <item name="asp_simpleMenuWidthUnit">@dimen/asp_simple_menu_width_unit</item>
    </style>

    <style name="Preference.Material.DialogPreference.RingtonePreference">
        <item name="android:ringtoneType">ringtone</item>
        <item name="android:showSilent">true</item>
        <item name="android:showDefault">true</item>
    </style>

    <style name="PreferenceFragmentList.Material" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <!--<item name="android:paddingTop">8dp</item>-->
        <!--<item name="android:paddingBottom">8dp</item>-->
    </style>

    <!--<style name="TextAppearance.Material.Preference.Title" parent="TextAppearance.AppCompat.Subhead">-->
    <!--</style>-->

    <!--<style name="TextAppearance.Material.Preference.Summary" parent="TextAppearance.AppCompat.Body1">-->
    <!--<item name="android:textColor">?android:textColorSecondary</item>-->
    <!--</style>-->

    <style name="Animation.Material.Popup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
    </style>

    <style name="Animation.Popup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/asp_grow_fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/asp_shrink_fade_out_center</item>
    </style>

    <style name="Animation.Asp.Popup" parent="Animation.Popup"/>

    <style name="Widget.Material.TextView.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.Material.DropDownItem.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:paddingLeft">?listPreferredItemPaddingLeft</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            ?listPreferredItemPaddingLeft
        </item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            ?listPreferredItemPaddingRight
        </item>
        <item name="android:paddingRight">?listPreferredItemPaddingRight</item>
    </style>

    <style name="Widget.Material.ListView.DropDown" parent="Widget.AppCompat.ListView.DropDown">
        <!--<item name="android:cacheColorHint">#0000</item>-->
        <!--<item name="android:colorBackgroundCacheHint">#0000</item>-->
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
        <!--<item name="android:scrollbarStyle">outsideInset</item>-->
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="Widget.Material.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="asp_simpleMenuWidthUnit">@dimen/asp_simple_menu_width_unit</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">28dp</item>
        <item name="android:paddingRight">28dp</item>
    </style>

    <style name="Widget.Material.Spinner.Underlined" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="asp_simpleMenuWidthUnit">@dimen/asp_simple_menu_width_unit</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">28dp</item>
        <item name="android:paddingRight">28dp</item>
    </style>

    <style name="ThemeOverlay.Material.Spinner" parent="">
        <!--<item name="listPopupWindowStyle">@style/Popup</item>-->
        <item name="android:spinnerItemStyle">@style/Widget.Material.TextView.SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/Widget.Material.DropDownItem.Spinner</item>
        <item name="dropDownListViewStyle">@style/Widget.Material.ListView.DropDown</item>
    </style>

    <style name="Preference.Material.DialogPreference.ColorPreference">
        <item name="android:widgetLayout">@layout/asp_preference_widget_image</item>
        <item name="android:positiveButtonText">@null</item>
        <item name="android:negativeButtonText">@null</item>
    </style>


</resources>
