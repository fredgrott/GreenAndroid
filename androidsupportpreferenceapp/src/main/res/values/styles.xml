<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar.InverseControls">
        <item name="colorControlNormal">?android:attr/textColorSecondaryInverse</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat">-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar.InverseControls
        </item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorHighlight">@color/text_highlight</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>

        <!--<item name="colorPreferenceStyle">-->
        <!--@style/Preference.Material.DialogPreference.ColorPreference-->
        <!--</item>-->

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>

        <item name="asp_preferenceIconTint">?colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <item name="colorAccent">@color/accent_alt</item>

        <item name="android:textColorHighlight">@color/text_highlight_alt</item>

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <item name="colorAccent">@color/accent_alt</item>

        <item name="android:textColorHighlight">@color/text_highlight_alt</item>

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleMarginStart">16dp</item>
        <item name="titleMarginEnd">16dp</item>
    </style>

    <style name="Widget.AppTheme.Toolbar.Solid">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="Popup" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup</item>
    </style>
</resources>
