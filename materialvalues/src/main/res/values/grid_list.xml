<resources>

    <!-- General values -->
    <dimen name="material_grid_list_tile_spacing_small">1dp</dimen>
    <dimen name="material_grid_list_tile_spacing_medium">@dimen/material_baseline_grid_0.5x</dimen>
    <dimen name="material_grid_list_header_footer_single_line_height">@dimen/material_baseline_grid_6x</dimen>
    <dimen name="material_grid_list_header_footer_two_line_height">@dimen/material_baseline_grid_8.5x</dimen>


    <!-- Header/footer text size
      ~ Two styles exist for headers and footers.
      ~ In the material design guidelines, they are referred to as the 16/12 and 14/14 styles.
      ~ In the following values, the 16/12 style is called "standard" and the 14/14 "alternative".
    -->
    <dimen name="material_grid_list_header_footer_title_text_size_standard">16sp</dimen>
    <dimen name="material_grid_list_header_footer_subtitle_text_size_standard">12sp</dimen>
    <dimen name="material_grid_list_header_footer_title_text_size_alternative">14sp</dimen>
    <dimen name="material_grid_list_header_footer_subtitle_text_size_alternative">14sp</dimen>


    <!-- Footer/header text area -->
    <dimen name="material_grid_list_header_footer_text_area_margin_start">@dimen/material_baseline_grid_2x</dimen>
    <dimen name="material_grid_list_header_footer_text_area_margin_vertical">@dimen/material_baseline_grid_2x</dimen>
    <dimen name="material_grid_list_header_footer_text_area_margin_end_alone">@dimen/material_baseline_grid_2x</dimen>
    <dimen name="material_grid_list_header_footer_text_area_margin_end_after_icon">@dimen/material_baseline_grid_1x</dimen>
    <dimen name="material_grid_list_header_footer_text_area_margin_end_before_icon">0dp</dimen> <!-- Only the icon padding is used -->


    <!-- Footer/header icon -->
    <dimen name="material_grid_list_header_footer_icon_size">@dimen/material_baseline_grid_3x</dimen>
    <dimen name="material_grid_list_header_footer_icon_padding_horizontal">@dimen/material_baseline_grid_2x</dimen>

</resources>