<resources>

    <!-- Common values -->
    <dimen name="material_chip_height">@dimen/material_baseline_grid_4x</dimen>
    <color name="material_chip_label_color">@color/material_typography_black_high_contrast</color>


    <!-- Simple chip (As opposed to a contact one) -->
    <dimen name="material_chip_simple_elevation">@dimen/material_elevation_chip</dimen>
    <dimen name="material_chip_simple_label_horizontal_padding">@dimen/material_baseline_grid_1.5x</dimen>
    <dimen name="material_chip_simple_label_text_size">13sp</dimen> <!-- Not the same as contact chips (error ?) -->

    <dimen name="material_chip_simple_remove_icon_size">@dimen/material_baseline_grid_3x</dimen>
    <color name="material_chip_simple_remove_icon_color">@color/material_icon_color_dark_theme_active</color>
    <dimen name="material_chip_simple_remove_icon_margin">@dimen/material_baseline_grid_0.5x</dimen>


    <!-- Contact chip (closed) -->
    <dimen name="material_chip_contact_closed_elevation">@dimen/material_elevation_contact_chip_closed</dimen>
    <dimen name="material_chip_contact_closed_label_padding_start">@dimen/material_baseline_grid_1x</dimen>
    <dimen name="material_chip_contact_closed_label_padding_end">@dimen/material_baseline_grid_1.5x</dimen>
    <dimen name="material_chip_contact_closed_label_padding_vertical">@dimen/material_baseline_grid_1x</dimen>
    <dimen name="material_chip_contact_closed_label_text_size">@dimen/material_typography_regular_body_1_text_size</dimen>

    <!-- Contact chip (open) -->
    <dimen name="material_chip_contact_open_elevation">@dimen/material_elevation_contact_chip_open</dimen>
    <dimen name="material_chip_contact_open_name_text_size">@dimen/material_typography_regular_subheading_text_size</dimen>
    <dimen name="material_chip_contact_open_address_text_size">@dimen/material_typography_regular_body_1_text_size</dimen>
    <dimen name="material_chip_contact_open_avatar_size">@dimen/material_baseline_grid_5x</dimen>
    <dimen name="material_chip_contact_open_padding_horizontal">@dimen/material_baseline_grid_1.5x</dimen>

    <dimen name="material_chip_contact_open_focused_height">@dimen/material_baseline_grid_9x</dimen>
    <dimen name="material_chip_contact_open_unfocused_height">@dimen/material_baseline_grid_7x</dimen>
    <dimen name="material_chip_contact_open_focused_padding_vertical">@dimen/material_baseline_grid_2x</dimen>
    
</resources>